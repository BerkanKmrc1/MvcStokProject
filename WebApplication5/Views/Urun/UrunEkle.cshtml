@model WebApplication5.Models.Entity.TBLURUNLER

@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>UrunEkle</h2>

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı </label>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="30"/>
    </div>
    <div>
        <label>Ürün Markası </label>
        <input type="text" class="form-control" name="MARKA"  required=""/>
    </div>
    <div>
        <label>Ürünün kategorisini seçiniz </label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Ürün Fiyatı </label>
        <input type="text" class="form-control" name="FİYAT" required=""/>
    </div>
    <div>
        <label>Ürün Stoğu </label>
        <input type="text" class="form-control" name="STOK" required=""/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>

